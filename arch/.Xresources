! Because that's dumb
URxvt.scrollBar: false

! This font is included in the dotfiles
URxvt.font: xft:PragmataPro:pixelsize=11
URxvt.boldFont: xft:PragmataPro:pixelsize=11:Bold
URxvt.italicFont: xft:PragmataPro:pixelsize=11:Italic
URxvt.boldItalicFont: xft:PragmataPro:pixelsize=11:Bold:Italic

! Better font rendering
Xft.autohint:  0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting:   1
Xft.antialias: 1
Xft.dpi:       96
Xft.rgba:      rgb

! Colors
urxvt*background:       #2E3436
urxvt*foreground:       #BFBFBF
!black
URxvt*color0:      #000000
URxvt*color8:      #555753
!red
URxvt*color1:      #CC0000
URxvt*color9:      #EF2929
!green
URxvt*color2:      #4E9A06
URxvt*color10:     #8AE234
!yellow
URxvt*color3:      #C4A000
URxvt*color11:     #FCE94F
!blue
URxvt*color4:      #3465A4
URxvt*color12:     #729FCF
!magenta
URxvt*color5:      #75507B
URxvt*color13:     #AD7FA8
!cyan
URxvt*color6:      #06989A
URxvt*color14:     #34E2E2
!white
URxvt*color7:      #D3D7CF
URxvt*color15:     #ECEDEE
